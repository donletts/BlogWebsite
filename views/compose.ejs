<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="titleId">Title</label>
        <input class="form-control" id="titleId" name="postTitle" rows="3" />

        <label for="messageId">Message</label>
        <textarea class="form-control" id="messageId" name="postMessage" rows="5"></textarea>
    </div>
    <button name="publish" type="submit" class="btn btn-primary btn-lg">Publish</button>
</form>

<%- include("partials/footer"); -%>