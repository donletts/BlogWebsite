<%- include("partials/header"); -%>

<h1>Home</h1>
<h2>Welcome</h2>
<p><%= startingContent %></p>

<% posts.forEach((post) => { %>
    <!--change to kebab case-->
    <% let navPost = "/" + post.title.replace ( " ", "-" ).toLowerCase (); %>
    <h2><%= post.title %></h2>
    <p>
        <%= post.body.substring ( 0, 100 ) + " ... " %>
        <a href="<%= navPost %>">Read More</a>
    </p>
<% }); %>

<%- include("partials/footer"); -%>